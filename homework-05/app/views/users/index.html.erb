<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>
			<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
			<!--users一覧 -->
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name%></td>

						<!-- 検索から遷移した場合は、フォローを非表示 -->
						<% unless params[:controller] == "searchs" && params[:action] == "search" %>
						<td><%= "フォーロー数：#{user.followers.count}" %></td>
						<td><%= "フォロワー数：#{user.followings.count}" %></td>
						<td>
						<% unless user == current_user %>
							<% unless Relationship.exists?(following_id: user.id, follower_id: current_user.id) %>
								<%= link_to "フォローする", relationships_path(params: {following_id: user.id, follower_id: current_user.id}), method: :post %>
							<% else %>
								<%= link_to "フォロー外す", relationship_path(user, params: {following_id: user.id, follower_id: current_user.id}), method: :delete %>
							<% end %>
						<% end %>
						</td>
						<% end %>

						<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<!--users一覧 -->
		</div>
	</div>
</div>