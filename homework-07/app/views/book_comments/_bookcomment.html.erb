<table class="table">
<% book_comments.each do |book_comment| %>
	<tr>
		<td>
			<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
		</td>
		<td>
		    <%= link_to book_comment.user.name, book_comment.user %>
		</td>
		<td>
		    <%= book_comment.comment %>
		</td>
		<% if book_comment.user_id == current_user.id %>
		<td>
		    <%= link_to "Destroy", book_comment_path(book_comment), method: :delete, class: "btn-sm btn-danger", remote: true %>
		</td>
		<% end %>
	</tr>
<% end %>
</table>