<div class="container">

	<%= render 'books/error_explanation', obj: @user %>

	<h2>User info</h2>
	<%= form_for(@user) do |f| %>
	<label>Name</label>
	<%= f.text_field :name, class: 'field'; %>
	<br>
	<labeL>Image</labeL>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: 'field'; %>
	<br>
	<label>Introduction</label>
	<%= f.text_area :introduction, class: 'field'; %>
	<br>
	<%= f.submit "Update User", class: 'btn btn-default' %>
	<% end %>

</div>