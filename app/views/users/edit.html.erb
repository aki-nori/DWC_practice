<h1>User info</h1>

<% if @user.errors.any? %>
	<p><%= "#{@user.errors.count} error prohibited this obj from being saved:" %></p>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
	</ul>
	<% end %>
<% end %>


<%= form_for(@user) do |f| %>
        <label>Name</label>
        <%= f.text_field :name %>
        <labeL>Image</labeL>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <label>Introduction</label>
        <%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
<% end %>