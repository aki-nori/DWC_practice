<div class="container">

	<%= render 'books/error_explanation', obj: @new_book %>
	<div class="col-xs-3">
		<%= render 'users/user_info', user: current_user %>
		<%= render 'books/new_book', book: @new_book %>
	</div>

	<div class="col-xs-9">
		<h2>Users</h2>
		<table class="table table-hover table-inverse">
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
			<% @users.each do |user| %>
			<tr>
				<td>
					<%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
				</td>
				<td>
					<%= user.name %>
				</td>
				<td>
					<%= link_to "Show", user_path(user.id) %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>

</div>