<h1>Editing Book</h1>

<% if @book.errors.any? %>
	<p><%= "#{@book.errors.count} error prohibited this obj from being saved:" %></p>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
	</ul>
	<% end %>
<% end %>

<%= form_for(@book) do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :body %>
<%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>