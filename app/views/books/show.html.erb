<div class="container">

	<%= render 'books/error_explanation', obj: @new_book %>
	<div class="col-xs-3">
		<%= render 'users/user_info', user: @book.user %>
		<%= render 'books/new_book', book: @new_book %>
	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table table-hover table-inverse">
			<tr>
				<td>
					<% img = attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40'%>
					<%= link_to img, user_path(@book.user) %>
					<br>

					<%= link_to @book.user.name, user_path(@book.user) %>
				</td>
				<td>
					<%= @book.title %>
				</td>
				<td>
					<%= @book.body %>
				</td>
				<% if @book.user.id == current_user.id %>
				<td>
					<%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
				</td>
				<td>
					<%= link_to "Destroy", book_path(@book),  method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
				</td>
				<% end %>
			</tr>
		</table>
	</div>

</div>